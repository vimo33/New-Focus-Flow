{
  "id": "comms-hub",
  "name": "Communications Hub",
  "version": "1.0.0",
  "description": "Unified messaging gateway for sending notifications and messages across Telegram, email, and other channels.",
  "capabilities": ["messaging"],
  "execution_type": "api",
  "invocation": {
    "base_url": "http://localhost:3002",
    "endpoint": "/api/send"
  },
  "input_schema": {
    "type": "object",
    "required": ["channel", "message"],
    "properties": {
      "channel": { "type": "string", "enum": ["telegram", "email", "slack"], "description": "Communication channel" },
      "message": { "type": "string", "description": "Message content to send" },
      "recipient": { "type": "string", "description": "Recipient identifier" }
    }
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "sent": { "type": "boolean" },
      "message_id": { "type": "string" }
    }
  },
  "trust_level": "trusted",
  "requires_approval": true,
  "max_execution_seconds": 30,
  "cost_estimate": "free"
}
