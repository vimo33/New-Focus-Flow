{
  "id": "claude-code",
  "name": "Claude Code Agent",
  "version": "1.0.0",
  "description": "Autonomous code generation, review, and testing agent powered by Claude Code SDK running in a sandboxed Docker container.",
  "capabilities": ["code_generation", "code_review", "testing"],
  "execution_type": "docker",
  "invocation": {
    "docker_image": "anthropic/claude-code:latest",
    "command": "claude-code run"
  },
  "input_schema": {
    "type": "object",
    "required": ["task"],
    "properties": {
      "task": { "type": "string", "description": "The coding task to perform" },
      "project_id": { "type": "string", "description": "Project context for scoping" },
      "files": { "type": "array", "items": { "type": "string" }, "description": "Files to include in context" },
      "mode": { "type": "string", "enum": ["generate", "review", "test", "refactor"], "default": "generate" }
    }
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "result": { "type": "string" },
      "files_changed": { "type": "array", "items": { "type": "string" } },
      "tests_passed": { "type": "boolean" }
    }
  },
  "trust_level": "sandboxed",
  "requires_approval": true,
  "max_execution_seconds": 600,
  "cost_estimate": "high"
}
