{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/scripts/safety-gate.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/scripts/safety-gate.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/scripts/cost-gate.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/hooks/validators/budget-gate.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Read|Glob|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/scripts/safety-gate.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/scripts/validate-edit.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/scripts/knowledge-graph-trigger.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/hooks/validators/validate-design-tokens.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/scripts/security-check.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/scripts/cost-tracker.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/scripts/verify-builds.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/scripts/task-result-writer.sh",
            "timeout": 15
          },
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/scripts/validate-analysis.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "/srv/focus-flow/.claude/scripts/telegram-notify.sh",
            "timeout": 15
          }
        ]
      }
    ]
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  }
}
